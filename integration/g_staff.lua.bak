function isPlayerSupporter(player)
	if not player or not isElement(player) or not getElementType(player) == "player" then
		return false
	end
	local text = getElementData(player, "forum_perms")
	
	if not text then
		return false
	end
	
	if string.find(text, SUPPORTER) then
		return true
	end
	return false
end

